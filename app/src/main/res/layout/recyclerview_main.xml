<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_item_pokemon"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:backgroundTint="@color/light_gray"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_container_pokemon"
            android:layout_width="210dp"
            android:layout_height="120dp"
            android:layout_marginHorizontal="2dp"
            android:layout_marginVertical="2dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/round_square"
            android:backgroundTint="@color/white"
            android:elevation="10dp"
            android:shadowColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.8"></ImageView>

        <ImageView
            android:id="@+id/iv_imagem_pokemon"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_margin="8dp"
            android:elevation="20dp"
            android:shadowColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/iv_container_pokemon"
            app:layout_constraintEnd_toEndOf="@+id/iv_container_pokemon"
            app:layout_constraintStart_toStartOf="@+id/iv_container_pokemon"
            app:layout_constraintTop_toTopOf="@+id/iv_container_pokemon"
            app:layout_constraintVertical_bias="0.0"></ImageView>

        <TextView
            android:id="@+id/tv_nome_pokemon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:elevation="20dp"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="POKEMON"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/iv_container_pokemon"
            app:layout_constraintHorizontal_bias="0.509"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"></TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>